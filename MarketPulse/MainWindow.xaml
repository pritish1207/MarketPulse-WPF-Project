<Window x:Class="MarketPulse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarketPulse"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MarketPulse" Height="600" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Input for Stock Symbol -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Enter Stock Symbol:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>

            <!-- This TextBox is now bound to the StockSymbol property in the ViewModel -->
            <TextBox Width="150" FontSize="14" VerticalContentAlignment="Center" Padding="5"
                     Text="{Binding StockSymbol, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- This Button's action is bound to the AddStockCommand in the ViewModel -->
            <Button Content="Add Stock" FontSize="14" Margin="10,0,0,0" Padding="10,5"
                    Command="{Binding AddStockCommand}"/>

        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section: List of Monitored Stocks (Future enhancement) -->
            <ListView Grid.Column="0" Name="StockListView" Margin="0,0,10,0">
                <!-- We will define how each item looks later -->
            </ListView>

            <!-- Right Section: Chart Display, bound to Series and XAxes properties in the ViewModel -->
            <lvc:CartesianChart Grid.Column="1"
                                Series="{Binding Series}"
                                XAxes="{Binding XAxes}">
            </lvc:CartesianChart>
        </Grid>
    </Grid>
</Window>